extends ../../layout-home
block content
	.container
		.row
			.col-md-12
				ol.breadcrumb
					li
						a(href="/home") Home
					li
						a(href="/api/services") Services
					li.active Add Services
				form(action="/api/services/addservice" method="post")
					.form-group
						label Name
						input(type="text" class="form-control" name="name")
					.form-group
						label serviceSecret
						input(type="text" class="form-control" name="serviceSecret")
					.form-group
						label Scope
						.input-group
							input.form-control(type='text' placeholder='Scope' id="scope")
							span.input-group-btn
								button.btn.btn-success.add-more(type='button' onclick='addScope()') +
					.form-group
						ul#scopes(style="list-style-type: none;")

					//.form-group
						label scope
						input(type='hidden', name='count', value='1')
						.control-group
							label.control-label(for='field1') Nice Multiple Form Fields
							#profs.controls
								form.input-append
									input#field1.input(autocomplete='off', name='prof1', type='text', placeholder='Type something', data-items='8')
									button#b1.btn.add-more(type='button') +

					button(type="submit") Add Service
				hr
	script.
		function addScope() {
			var scope= $("#scope").val();
			//var entry = document.createElement('li');
			//entry.appendChild(document.createTextNode(firstname));
			//$("#scopes").append(entry);
			$("#scopes").append($("<li>" +
					"<div class='input-group'>" +
					"<input class='input' autocomplete='off' name='scopes' value='"+scope+"' type='text'>" +
					"<button class='btn btn-danger add-more' type='button' onclick='this.parentNode.parentNode.remove()'>-" +
					"</div>" +
					"</li>"));
		}
	//script.
		$(document).ready(function() {
			var next = 1;
			$(".add-more").click(function (e) {
				e.preventDefault();
				var addto = "#field" + next;
				var addRemove = "#field" + (next);
				next = next + 1;
				var newIn = '<input autocomplete="off" class="input form-control" id="field' + next + '" name="field' + next + '" type="text">';
				var newInput = $(newIn);
				var removeBtn = '<button id="remove' + (next - 1) + '" class="btn btn-danger remove-me" >-</button></div><div id="field">';
				var removeButton = $(removeBtn);
				$(addto).after(newInput);
				$(addRemove).after(removeButton);
				$("#field" + next).attr('data-source', $(addto).attr('data-source'));
				$("#count").val(next);

				$('.remove-me').click(function (e) {
					e.preventDefault();
					var fieldNum = this.id.charAt(this.id.length - 1);
					var fieldID = "#field" + fieldNum;
					$(this).remove();
					$(fieldID).remove();
				});
				console.log(next);
			});
		});